@{
    Layout = null;
}

@model AccountsViewModel
<!DOCTYPE html>
<html>
<title>Đăng nhập vào trang quản trị</title>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<body>

    <div class="w3-container">
 

        <div id="id01" class="w3-modal" style="display: block;">
            <div class="w3-modal-content w3-card-4 w3-animate-zoom" style="max-width:600px">

                <div class="w3-center">
                    <br>
                    
                    <img  src="~/formain/img/core-img/logoshop.jpg" alt="Avatar" style="width:30%" class="w3-circle w3-margin-top">
                </div>
                @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                {
                    <div class="w3-panel w3-red w3-display-container">
                        <span onclick="this.parentElement.style.display='none'"
                              class="w3-button w3-large w3-display-topright">&times;</span>
                        <h3>Thông báo !</h3>
                        <p>@ViewBag.ErrorMessage</p>
                    </div>
           
                 
                }

                <form method="post" asp-controller="Login" asp-action="Login" class="w3-container">
                    @Html.AntiForgeryToken()
                    <div class="w3-section">
                        <label><b>Username</b></label>
                        <input asp-for="Username" class="w3-input w3-border w3-margin-bottom" type="text" placeholder="Enter Username"  required>
                        <label><b>Password</b></label>
                        <input asp-for="Password" class="w3-input w3-border" type="password" placeholder="Enter Password"  required>

                        <button class="w3-button w3-block w3-green w3-section w3-padding" type="submit">Login</button>
                       
                    </div>
                </form>

          
                <div class="w3-container w3-border-top w3-padding-16 w3-light-grey">
                    <a asp-controller="Home" asp-action="Index" type="button" class="w3-button w3-red">Cancel</a>
                    <span class="w3-right w3-padding w3-hide-small">Quên <a asp-controller="Login" asp-action="ForgotPassword">mật khẩu?</a></span>
                </div>

            </div>
        </div>
    </div>

</body>
</html>

